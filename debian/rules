#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1


CMAKE_FLAGS = \
	-DPYTHON_PACKAGES_DIR=/usr/lib/python2.7/dist-packages/ \
	-DCMAKE_BUILD_TYPE=Release


override_dh_auto_configure:
	dh_auto_configure -- $(CMAKE_FLAGS)

override_dh_python2:
	dh_python2
	dh_numpy

%:
	dh $@ --parallel --with-python2
